.app-event-in-room

  &__room-description
    width 245px
    background #fff
    padding-top 8px
    padding-bottom 4px
    padding-left 25px
    box-shadow 1px 0 0 0 #e9ecef
    @media screen and (max-width 1280px)
      width 180px
      height 58px
      background: #FFFFFF;
      border-bottom: 1px solid #E9ECEF;
      padding 12px 0 12px 16px

      &__mobile-swipe
        position: absolute;
        top 0;
        margin-left: 5px
        width: auto
        height: auto;
        background: #FFFFFF;
        box-shadow: 0 1px 8px 0 rgba(0,44,92,0.28);
        border-radius: 4px;
        border-bottom: none
        font-family: HelveticaNeue-Bold;
        font-size: 11px;
        color: #262626;
        letter-spacing: 0.4px;
        padding: 5px 8px
        z-index: 150

        .room-capacity
          display: none;

    .room-title
      font-family HelveticaNeue-Medium;
      font-size 15px
      color #000000
      line-height 17px

    .room-capacity
      font-family HelveticaNeue
      font-size 13px
      color #000000
      line-height 17px

  &__room-events
    display flex
    flex-grow 1
    align-items center
    position: relative;

    .room-events-cells
      display flex
      flex-grow 1
      justify-content space-around
      height 0px
      transition: height 0.2s linear 0.2s;
      background #D5DFE9
      @media screen and (max-width 1280px)
        border-bottom: 1px solid #FFFFFF;

      .event-cell
        height 100%
        z-index 10
        outline: none;

        &:hover
          cursor pointer

      .free-cell
        overflow hidden
        position relative
        background #fff

        a
          text-decoration: none;
          width: 100%;
          height: 100%;
          text-align: center;
          display: inline-block;
          color: #fff;
          font-size: 19px;
          font-family: HelveticaNeue-Bold;

          span
            width: 100%;
            height: 100%;
            display: inline-block;
            @media screen and (max-width 1280px)
              display none

        &:hover
          background #2B50FD
          border-radius 2px
