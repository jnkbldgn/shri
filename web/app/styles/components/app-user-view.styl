.app-user-view
    display: flex;
    justify-content: flex-start;
    align-items: center;
    @media screen and (max-width 1280px)
      justify-content: space-between

  .user-avatar
    width: 24px
    height: 24px
    border-radius: 50%
    overflow: hidden;
    background-image: url('https://avatars3.githubusercontent.com/u/000012?s=460&v=4')
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    @media screen and (max-width 1280px)
      width: 32px
      height: 32px

    img
      width: 100%
      height: 100%

  .user-login
    font-family: Helvetica;
    font-size: 13px;
    color: #000000;
    letter-spacing: 0;
    line-height: 17px;
    padding: 0 5px
    @media screen and (max-width 1280px)
      font-size 15px
      flex-grow 1
      padding: 0 8px

  .user-floor
    font-family: HelveticaNeue;
    font-size: 13px;
    color: #37003E;
    letter-spacing: 0;
    line-height: 15px;
    @media screen and (max-width 1280px)
      font-size 15px

  .user-remove
    margin-left 10px
    @media screen and (max-width 1280px)
      width 12px
      height 12px

.dark
  background: #E9ECEF;
  border-radius: 16px;
  padding-right 9px
