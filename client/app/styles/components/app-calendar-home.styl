.app-calendar
  width 245px
  height 100%
  padding 0 24px
  background-color #ffffff
  @media screen and (max-width 1280px)
    width 100%
    height 56px
    padding 0

  &__input
    height 100%
    width 100%
    display flex
    align-items center
    justify-content space-between

    .input-value
      font-family 'HelveticaNeue-Medium'
      font-size 15px
      color #000000
      letter-spacing 0
      cursor pointer
      user-select none
      @media screen and (max-width 1280px)
        flex-grow 1
        text-align center
        margin-left: 50px;
        margin-right: 50px;

      @media screen and (max-width 321px)
        margin-left: 30px;
        margin-right: 30px;

  .active-calendar
    width: 604px
    @media screen and (max-width 1280px)
      height 380px!important
      width: 100%!important

    .month
      @media screen and (max-width 1280px)
        min-width 95vw
      @media screen and (min-width 341px) and (max-width 1280px)
        width 339px
        min-width 339px

      .month-days__value
        @media screen and (max-width 1280px)
          height 45px
          width 45px
          line-height 45px

        @media screen and (max-width 321px)
          height 40px
          width 40px
          line-height 40px
