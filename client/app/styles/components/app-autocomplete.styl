.app-autocomplete
  position relative

  .app-autocomplete-list
    position absolute
    width 100%
    max-height 136px
    z-index 100

    .app-autocomplete-root
      background: #FFFFFF;
      box-shadow: 0 1px 10px 0 rgba(0,44,92,0.28);
      border-radius: 4px;
      display none
      flex-direction column

      .app-autocomplete-item
        width 100%
        height 34px
        padding 5px 0 0 16px
        cursor pointer

        .app-user-view
          @media screen and (max-width 1280px)
            justify-content: flex-start !important

            .user-avatar
              height 24px
              width 24px

            .user-login
              flex-grow 0

            .user-floor
              font-size 13px

        &:hover
          background: #F6F7F9;
          font-family: HelveticaNeue-Bold;
          font-weight bold

.app-autocomplete-input:focus+.app-autocomplete-list>.app-autocomplete-root
  display flex
