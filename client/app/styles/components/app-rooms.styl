.app-rooms-and-events
  position relative
  &__rooms

    .rooms
      &__floor
        font-family HelveticaNeue-Bold
        font-size 11px
        text-transform uppercase
        color #858E98
        letter-spacing 0.4px
        line-height 13px
        padding-top 20px
        padding-left 25px
        background #fff
        width 245px
        box-shadow 1px 0 0 0 #e9ecef
        @media screen and (max-width 1280px)
          width 180px
          padding-left 16px
          background transparent
          height: 37px;
          padding-bottom: 8px;

      &__info
        display flex
        @media screen and (max-width 1280px)
          position: relative;

  &__time-grid
    display flex
    justify-content space-between
    position absolute
    right 0
    top 0
    bottom 0
    left 245px
    @media screen and (max-width 1280px)
      left 180px


    .time-grid-timer
      position: absolute;
      top: -36px;
      padding-left 8px
      height: calc(100% + 36px)
      width: 100%
      @media screen and (max-width 1280px)
        top -27px

    .time-grid-cell
      flex-grow 1
      position relative

      &:before
        height: 100%;
        border-left: 1px solid rgba(19,100,205,0.10);
        width: 1px;
        content: "";
        display: block;
        margin: 0 auto;
        position absolute
        left 0
        right 0
        z-index 50
