//main
*
  margin: 0
  padding: 0
  font-family: HelveticaNeue, Arial, sans-serif
  box-sizing:border-box;
body
  width 100%
  height 100vh
  overflow: hidden;
  position: relative;

.body
  @media screen and (max-width 1280px)
    height: 100vh;
    position: relative;

.container
  width: 1280px
  background-color #F6F7F9
  margin: 0 auto;
  overflow hidden
  @media screen and (max-width 1280px)
    width 100%!important
    height 100vh
    overflow-y: scroll;
    overflow-x: hidden;
    position: relative;

//font-color
.blueColor
  font-family HelveticaNeue-Bold !important
  color #0070E0 !important

.grayColor
  color #858E98!important
  font-family HelveticaNeue-Medium
  font-size 15px
  color #858E98
  line-height 17px

//any
.app-loader
  display none
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background-image url('../images/loader.svg')
  background-repeat no-repeat
  background-position center
  background-size 15%
  background-color rgba(255, 255, 255, 0.8)
  z-index 100

.active-loader
  display block !important

.button-block
  width 100%;
  background: #FFFFFF;
  box-shadow: 0 -1px 0 0 #E9ECEF;
  height 75px
  display: flex;
  justify-content: center;
  align-items: center;
  @media screen and (max-width 1280px)
    box-shadow none


.button-container
  display: flex;
  justify-content: space-between;

.app-edit-event__buttons-block .button-container
  @media screen and (max-width 1280px)
    justify-content: flex-end;
    align-items: center;
    height: 80px;
    padding-right: 16px;

  &__mobile
    display none
    @media screen and (max-width 1280px)
      display block
      height 54px
      line-height 54px
      text-align center
      font-family: HelveticaNeue-Medium;
      font-size: 15px;
      color: #FF3333;
      border-bottom 8px solid #E9ECEF
      box-sizing content-box

  .button-save__mobile
    @media screen and (max-width 1280px)
      background #007DFF
      color #FFFFFF

.app-create-event
  @media screen and (max-width 1280px)
    min-height calc( 100vh - 48px)
    background #FFFFFF

  &__buttons-block .button-container
    .button-create
      @media screen and (max-width 1280px)
        padding 13px 57px


.button-container

  .button-remove
    @media screen and (max-width 1280px)
      display none

  .button:not(:last-child)
    margin-right 15px

  .button:not(:last-child)
    margin-right 15px

.app-create-event__buttons-block

  .button-container
    @media screen and (max-width 1280px)
      justify-content center


.display-none
  display none !important

.error-valid input
  border: 2px solid red;

.height-events-row
  height 28px!important
  @media screen and (max-width 1280px)
    height 58px!important
